{
  "extends": "@clarifydoc/tsconfig/tsconfig-base.json",
  "compilerOptions": {
    // Override or add settings specific to the Extension (React/Vite)
    "target": "ESNext", // Ensure target is suitable for modern browsers
    "useDefineForClassFields": true, // Standard for modern TS/React
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Browser environment libs
    "jsx": "react-jsx", // Enable JSX for React
    "module": "ESNext", // Match base or required by Vite
    "moduleResolution": "Bundler", // Match base or required by Vite
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Vite handles the build output

    // Optional: Add path aliases if desired
    // "baseUrl": ".",
    // "paths": {
    //   "@/*": ["./src/*"]
    // }
  },
  "include": ["src"], // Specify source directory for this project
  "references": [
    // Keep these references if they were generated by Vite
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}